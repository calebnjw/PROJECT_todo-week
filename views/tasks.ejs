<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <%- include('partials/styles.ejs') %>
  </head>
  <body>
    <script>
      let n = Number("<%= n %>");
      let m = Number("<%= m %>");

      const plusN = () => {
        n = n + 1;
        window.location.href = `/tasks?n=${n}&m=${m}`;
      };

      const minusN = () => {
        n = n - 1;
        window.location.href = `/tasks?n=${n}&m=${m}`;
      };
    </script>
    <%- include('partials/navbar-logout.ejs') %>

    <!-- big container to store whole page -->
    <div class="container-flex vh-100">
      <!-- THIS CONTAINER IS FOR THE DATES -->
      <div class="container-flex mb-5">
        <div class="row">
          <!-- div for left button -->
          <div class="text-center col-1">
            <button class="btn btn-outline-primary mr-3" type="button" onclick="minusN()">
              ‚¨ÖÔ∏è
            </button>
          </div>
          <!-- create divs for each date -->
          <% dates.forEach((date) => { %>
          <div class="col-2">
            <h4><%= date.weekday %></h4>
            <p><%= date.date %></p>
            <div class="row">
              <!-- if there are tasks to be displayed and don't belong in a list -->
              <% if (dates_tasks.length !== 0) { %>
              <ul class="list-group">
                <!-- iterate through each task in the array -->
                <% dates_tasks.forEach((task) => { %>
                <!-- check that the date on the task matches the current date on the list -->
                <% if (task.task_date === date.date) { %>
                <!-- if tasks is completed, render this list style: -->
                <% if (task.task_state === true) { %>
                <li class="list-group-item task-complete">
                  <span class="btn-group">
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>/complete?_method=PUT&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-1" type="submit" value="‚úîÔ∏è" />
                    </form>
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>?_method=DELETE&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-3" type="submit" value="üóëÔ∏è" />
                    </form>
                  </span>
                  <%= task.task %>
                </li>
                <% } else { %>
                <!-- if not, render this list style: -->
                <li class="list-group-item justify-content-between">
                  <span class="btn-group">
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>/complete?_method=PUT&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-1" type="submit" name="complete" value="‚≠ï" />
                    </form>
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>?_method=DELETE&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-3" type="submit" name="delete" value="üóëÔ∏è" />
                    </form>
                  </span>
                  <%= task.task %>
                </li>
                <!-- close 'completed state' if else -->
                <% } %>
                <!-- close 'date comparison' if else -->
                <% } %>
                <!-- close 'tasks iteration' forEach -->
                <% }) %>
              </ul>
              <!-- close 'list checking' if else -->
              <% } %>
              <form class="" action="/tasks/<%= date.date %>?n=<%= n %>" method="POST">
                <input
                  class="list-group-item form-control py-4"
                  type="text"
                  id="todo"
                  name="todo"
                  placeholder="Todo"
                />
              </form>
              <!-- close row -->
            </div>
            <!-- close col -->
          </div>
          <% }) %>
          <!-- div for right button -->
          <div class="text-center col-1 mb-3">
            <button class="btn btn-outline-primary mr-3" type="button" onclick="plusN()">‚û°Ô∏è</button>
          </div>
          <!-- close row -->
        </div>
        <!-- close small container -->
      </div>

      <!-- THIS CONTAINER IS FOR THE OTHER LISTS -->
      <div class="container-flex">
        <!-- select from 'list_users' by 'user_id', and inner join to 'lists' -->
        <!-- for the first two lists, create one column each -->
        <!-- buttons on the side to show next / previous list columns -->
        <div class="row">
          <!-- div for left button -->
          <div class="text-center col-1">
            <button class="btn btn-outline-primary mr-3" type="button" onclick="minusN()">
              ‚¨ÖÔ∏è
            </button>
          </div>
          <!-- create divs for each date -->
          <% lists.forEach((list) => { %>
          <div class="col-2">
            <span class="btn-group">
              <form class="" action="/list/edit/<%= list.list_id %>" method="POST">
                <input class="mr-2" type="submit" value="‚úèÔ∏è" />
              </form>
              <h4><%= list.list_name %></h4>
            </span>
            <div class="row">
              <!-- if there are tasks to be displayed and don't belong in a list -->
              <% if (lists_tasks.length !== 0) { %>
              <ul class="list-group">
                <!-- iterate through each task in the array -->
                <% lists_tasks.forEach((task) => { %>
                <!-- check that the date on the task matches the current date on the list -->
                <% if (task.list_id === list.list_id) { %>
                <!-- if tasks is completed, render this list style: -->
                <% if (task.task_state === true) { %>
                <li class="list-group-item task-complete">
                  <span class="btn-group">
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>/complete?_method=PUT&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-1" type="submit" value="‚úîÔ∏è" />
                    </form>
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>?_method=DELETE&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-3" type="submit" value="üóëÔ∏è" />
                    </form>
                  </span>
                  <%= task.task %>
                </li>
                <% } else { %>
                <!-- if not, render this list style: -->
                <li class="list-group-item justify-content-between">
                  <span class="btn-group">
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>/complete?_method=PUT&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-1" type="submit" name="complete" value="‚≠ï" />
                    </form>
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>?_method=DELETE&n=<%= n %>"
                      method="POST"
                    >
                      <input class="mr-3" type="submit" name="delete" value="üóëÔ∏è" />
                    </form>
                  </span>
                  <%= task.task %>
                </li>
                <!-- close 'completed state' if else -->
                <% } %>
                <!-- close 'date comparison' if else -->
                <% } %>
                <!-- close 'tasks iteration' forEach -->
                <% }) %>
              </ul>
              <!-- close 'list checking' if else -->
              <% } %>
              <form class="" action="/tasks/<%= list.list_id %>?n=<%= n %>" method="POST">
                <input
                  class="list-group-item form-control py-4"
                  type="text"
                  id="todo"
                  name="todo"
                  placeholder="Todo"
                />
              </form>
              <!-- close row -->
            </div>
            <!-- close col -->
          </div>
          <% }) %>
          <!-- div for right button -->
          <div class="text-center col-1 mb-3">
            <button class="btn btn-outline-primary mb-1" type="button" onclick="plusN()">‚û°Ô∏è</button>
            <button
              class="btn btn-outline-primary"
              type="button"
              onclick="window.location.href='/lists/create'"
            >
              ‚ûï
            </button>
          </div>
          <!-- close row -->
        </div>
        <!-- close small container -->
      </div>
      <!-- close big container -->
    </div>
    <%- include('partials/scripts.ejs') %>
  </body>
</html>
