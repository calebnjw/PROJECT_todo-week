<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <%- include('partials/styles.ejs') %>
  </head>
  <body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
      <div class="row">
        <div class="text-center col-1 mb-3">
          <button class="btn btn-outline-primary mr-3" type="button">⬅️</button>
        </div>
        <div class="col-10 mb-3">
          <div class="row">
            <div class="col-12 text-center mb-3">
              <div>TODAY'S LIST</div>
              <div>20/5/2022</div>
            </div>
            <div class="col-12 mb-3">
              <% if (tasks !== 0) { %>
              <ul class="list-group">
                <% tasks.forEach((task) => { %>
                <li class="list-group-item">
                  <span class="btn-group">
                    <form
                      class=""
                      action="/tasks/<%= task.task_id %>/complete?_method=PUT"
                      method="POST"
                    >
                      <input class="btn btn-outline-success mr-3" type="submit" value="✔️" />
                    </form>
                    <form class="" action="/tasks/<%= task.task_id %>?_method=DELETE" method="POST">
                      <input class="btn btn-outline-danger mr-3" type="submit" value="❌" />
                    </form>
                  </span>
                  <%= task.task %>
                </li>
                <% }) %>
              </ul>
              <% } %>
              <form class="" action="/tasks" method="POST">
                <input
                  class="list-group-item form-control py-4"
                  type="text"
                  id="todo"
                  name="todo"
                  placeholder="Type your next todo here"
                />
              </form>
            </div>
          </div>
        </div>
        <div class="text-center col-1 mb-3">
          <button class="btn btn-outline-primary mr-3" type="button">➡️</button>
        </div>
      </div>
    </div>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>
